pipeline {
    agent {
        label 'maven'
    }

    tools {
        maven 'maven-latest'
    }

    stages {
        stage('Build') {
            steps {
                sh "mvn clean package surefire-report:report-only"
            }
            post {
                always {
                    sh "ls -latr"
                    sh "ls -latr target/"
                }
                failure {
                    //mail bcc: '', body: '', cc: 'manager@mycompanycom', from: '', replyTo: '', subject: 'Jenkins Job has failed - $JOB_NAME', to: 'support@mycompany.com'
                    echo "I am in failure"
                }
                success {
                    echo "I am success"
                }
            }
        }
    }
}